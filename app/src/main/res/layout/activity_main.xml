<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/txtEnlem"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="Enlem"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtBoylam"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Boylam"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnlem" />

    <Button
        android:id="@+id/btnGit"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="70dp"
        android:text="Git"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoylam" />

    <Button
        android:id="@+id/btnKonumAl"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="Konum Al"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGit" />
</androidx.constraintlayout.widget.ConstraintLayout>