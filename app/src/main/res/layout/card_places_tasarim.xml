<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtPlaceName"
                android:layout_width="239dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7dp"
                android:gravity="center|left"
                android:text="Mekan AdÄ±"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPlaceLocation"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPlaceName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="11dp"
                android:gravity="center|left"
                android:text="Enlem-Boylam"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtPlaceVicinity"
                android:layout_width="336dp"
                android:layout_height="67dp"
                android:layout_below="@+id/txtPlaceLocation"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="9dp"
                android:gravity="center|left"
                android:text="Adres"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iconPlace"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="19dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>